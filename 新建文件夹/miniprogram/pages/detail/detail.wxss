
page{
  background: #f3f3f3;
}
.banner{
  display: block;
  width: 100%;
  height: 400rpx;
}
.block{
  background: #fff;
  margin-top: 20rpx;
  width:100%;
}
.block-title{
  position: relative;
  font-size: 34rpx;
  line-height: 1.5;
  color: #00BFFF;
  padding: 10rpx 20rpx;
  text-indent: 1rem;  /*缩进 */
}
.block-title::after{
  position: absolute;
  left: 20rpx;
  top: 10rpx;
  content: "";
  width: 12rpx;
  height: 40rpx;
  background: #00BFFF;
}
.block-desc{
  display: block;
  color: #666;
  line-height: 1.6;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx;
  text-indent: 1rem;  
}
  