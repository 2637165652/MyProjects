/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.banner{
  display: block;
  width: 100%;
  height: 400rpx;
}
.introduction.weight{
  border-bottom: #aaa 1px solid;
  font-size: 12px;
  line-height: 1.5;
  padding: 0 5px 10px;
  box-shadow: 1px;
}

.txt{
  font-size: 34rpx;
  line-height: 1.5;
  /* text-indent: 2em; */
  width: 100%;
  /* font-weight: bold; */
  padding: 10px;
}

button {
  margin: 10px;
}

/* 公告栏 */
.block{
  background: #fff;
  margin: 50rpx 0 20rpx 0;
  width:100%;
}
.block-title{
  position: relative;
  font-size: 34rpx;
  line-height: 1.5;
  color: #00BFFF;
  padding: 10rpx 20rpx;
  text-indent: 1rem;  /*缩进 */
}
.block-title::after{
  position: absolute;
  left: 20rpx;
  top: 10rpx;
  content: "";
  width: 12rpx;
  height: 40rpx;
  background: #00BFFF;
}
.block-desc{
  display: block;
  color: #666;
  line-height: 1.6;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx;
  text-indent: 1rem;  
}