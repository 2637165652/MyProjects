<!--login.wxml-->
<view wx:if="{{canIUse}}">
  <view class='header'>
    <image src='../../images/user-unlogin.png'></image>
  </view>
  <view class='content'>
    <view>申请获取以下权限</view>
    <text>获取您的头像、昵称等公开信息</text>
  </view>
  <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
    授权登录
  </button>
</view>
<view wx:else>请升级微信版本</view>
